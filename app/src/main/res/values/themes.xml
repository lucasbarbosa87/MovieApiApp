<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Desafioindra" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#001E96</item>
        <item name="colorPrimaryVariant">#001E96</item>
        <item name="colorOnPrimary">#001E96</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:actionBarItemBackground">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Desafioindra.Toolbar">
        <item name="theme">@style/ThemeOverlay.MaterialComponents</item>
        <item name="android:background">#001E96</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="AppTheme.ToolbarTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_gravity">center</item>
    </style>
</resources>