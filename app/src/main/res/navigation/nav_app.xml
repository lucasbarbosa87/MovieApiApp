<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_app.xml"
    app:startDestination="@id/listFragment">

    <fragment
        android:id="@+id/listFragment"
        android:name="br.com.mecury.movieapp.ui.list.ListFragment"
        android:label="Filmes Populares">
        <action
            android:id="@+id/action_listFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="br.com.mecury.movieapp.ui.detail.DetailFragment"
        android:label="Detalhe do filme">
        <argument
            android:name="movie_id"
            app:argType="integer" />
    </fragment>
</navigation>